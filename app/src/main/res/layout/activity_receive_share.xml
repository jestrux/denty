<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akilsw.waky.denti.ReceiveShareActivity"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:paddingLeft="22dp"
            android:paddingRight="36dp"
            android:text="Add Resource"
            android:textColor="#000"
            android:fontFamily="@font/fsans_bold"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <ImageView
            android:clickable="true"
            android:id="@+id/action_close"
            android:layout_marginRight="16dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_close"
            android:tint="#000"
            android:visibility="visible"/>
    </LinearLayout>
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/shared_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="24dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/resource_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title e.g. Law 101 Lecture 2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/fsans"/>

        <Button
            android:id="@+id/submit_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:minWidth="160dp"
            android:background="@color/colorPurple"
            android:textColor="#fff"
            android:textSize="18dp"
            android:padding="12dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:alpha="0.3"
            android:text="SUBMIT"/>
    </LinearLayout>
</LinearLayout>
