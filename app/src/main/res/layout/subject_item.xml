<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_selector">

    <RelativeLayout
        android:id="@+id/subject_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff005e">

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_delete_subject" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/deleteIcon"
            android:text="DELETE"
            android:textColor="#fff"
            android:textSize="13dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/subject_foreground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_selector">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fefefe"
            android:padding="20dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="French Cuisine"
                android:layout_centerVertical="true"
                android:textColor="#333"
                android:textSize="20dp"
                android:fontFamily="@font/fsans" />

            <ImageView
                android:id="@+id/deleteSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right"/>
        </LinearLayout>

        <View
            android:id="@+id/subject_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"/>
    </LinearLayout>
</FrameLayout>